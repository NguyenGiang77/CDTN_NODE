<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Get Crub</title>
    <style>
        table,
        th,
        td {
            border: 1px solid black;
            border-collapse: collapse;
        }
        .btn-edit{
            height: 20pt;
            background: blanchedalmond;
            outline: none;
            border: none;
            width: 50pt;
            margin: 3pt ;
            border-radius: 3pt;
            cursor: pointer;
        }
        .btn-delete{
            height: 20pt;
            background: rosybrown;
            outline: none;
            border: none;
            width: 50pt;
            border-radius: 3pt;
            cursor: pointer;
        }        
    </style>
</head>
<body>
    <table style="width:100%">
        <tr>
            <th>Email</th>
            <th>Firstname</th>
            <th>Lastname</th>
            <th>Address</th>
            <th>Actions</th>
        </tr>
        <% for (let i=0;i<dataTable.length;i++) { %>
            <tr>
                <td><%=dataTable[i].email %></td>
                <td><%=dataTable[i].firstName%></td>
                <td><%=dataTable[i].lastName%></td>
                <td><%=dataTable[i].address%></td>
                <td>
                    <a href ="/edit-crub?id=<%=dataTable[i].id%>" class="btn-edit" type="button">Edit</a>
                    <a href ="/delete-crub?id=<%=dataTable[i].id%>"class = "btn-delete" type="button">Detele</a>
                </td>
            </tr>
            <% } %>
    </table>
</body>
</html>